{
  "description": "Ralph workflow guards - only active when FLOW_RALPH=1",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Execute",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"${CLAUDE_PLUGIN_ROOT}\" ] && ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/ralph-guard.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "[ -n \"${DROID_PLUGIN_ROOT}\" ] && ${DROID_PLUGIN_ROOT}/scripts/hooks/ralph-guard.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Execute",
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"${CLAUDE_PLUGIN_ROOT}\" ] && ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/ralph-guard.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "[ -n \"${DROID_PLUGIN_ROOT}\" ] && ${DROID_PLUGIN_ROOT}/scripts/hooks/ralph-guard.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"${CLAUDE_PLUGIN_ROOT}\" ] && ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/ralph-guard.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "[ -n \"${DROID_PLUGIN_ROOT}\" ] && ${DROID_PLUGIN_ROOT}/scripts/hooks/ralph-guard.py",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -n \"${CLAUDE_PLUGIN_ROOT}\" ] && ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/ralph-guard.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "[ -n \"${DROID_PLUGIN_ROOT}\" ] && ${DROID_PLUGIN_ROOT}/scripts/hooks/ralph-guard.py",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
